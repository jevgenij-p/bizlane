{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "skipLibCheck": true,
      "target": "es6",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "sourceMap": true,
      "rootDir": "src",
      "outDir": "dist"
    },
    "lib": ["es2015"]
}